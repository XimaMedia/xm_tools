<?xml version="1.0" encoding="utf-8" ?>

<phpdocumentor>
    <author>Steve Lenz</author>
    <email>steve.lenz@xima.de</email>
    <title>XIMA Tools API Documentation</title>
    <files>
        <directory>./Classes</directory>
    </files>
    <parser>
        <target>./Doc/output</target>
        <encoding>utf8</encoding>
        <markers>
            <item>TODO</item>
        </markers>
        <extensions>
            <extension>php</extension>
        </extensions>
        <visibility></visibility>
    </parser>
    <transformer>
        <target>./Doc/API-Documentation</target>
    </transformer>
    <transformations>
        <template name="responsive-twig"/>
    </transformations>
    <logging>
        <level>warn</level>
        <paths>
            <default>./Doc/log/{DATE}.log</default>
            <errors>./Doc/log/{DATE}.errors.log</errors>
        </paths>
    </logging>
</phpdocumentor>
